{
  "manifest_version": 3,
  "name": "Transhot Hover Actions",
  "version": "0.1.0",
  "description": "Показывает аккуратный блок перевода и настроек при наведении на изображения и видео.",
  "permissions": [],
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "css": ["src/styles.css"],
      "run_at": "document_idle"
    }
  ]
}
