{
  "manifest_version": 3,
  "name": "Transhot Hover Actions",
  "version": "0.1.0",
  "description": "Показывает аккуратный блок перевода при наведении на изображения и видео.",
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["downloads", "storage"],
  "host_permissions": ["<all_urls>", "file:///*"],
  "options_ui": {
    "page": "src/options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "css": ["src/styles.css"],
      "run_at": "document_idle"
    }
  ]
}
